<div class="LC2_date">
  <% locals.months.forEach(function(months, i){%>
  <div class="LC2_date_core <%=locals.type%>">
    <ul class="LC2_date_head">
      <li>
        <span class="LC2_icon LC2_icon_arrow-upper prev-years"></span>
      </li>
      <li>
        <span><%=locals.value[i].split('/')[0]%>年</span>
      </li>
      <li>
        <span class="LC2_icon LC2_icon_arrow-next next-years"></span></span>
      </li>
    </ul>
    <div class="LC2_date_content">
      <ul class="LC2_date_list <%=locals.type%>">
        <% months.forEach(function(month, index){%>
        <li class="<%= parseInt(locals.value[i].split('/')[1]) == month ? 'LC2_active' : ''%>">
          <span year="<%=locals.value[i].split(' ')[0].split('/')[0]%>" class="LC2_month" month="<%=month%>"><%=month >= 10 ? month : '0' + month%>月</span>
        </li>
        <%})%>
      </ul>
    </div>
    <ul class="LC2_date_footer">
      <li>
        <%if (locals.months.length == 1 || i > 0) {%>
        <a href="#" class="LC2_date_button">确定</a>
        <%}%>
      </li>
    </ul>
  </div>
  <%})%>
</div>